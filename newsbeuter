
#use this useragent to get osvdb feed
user-agent "Mozilla/4.0 (compatible; MSIE 8.0; Windows NT 6.0)"

# Layout
datetime-format %d.%m-%H:%M
text-width 0 #max text width to render html
display-article-progress yes
show-keymap-hint yes #keyboard hints ?
always-display-description true
article-sort-order date # parameter syntax: <sortfield>[-<direction>]
articlelist-format "%4i %f %D %?T?|%-17T| ?%t"

#color config
color background red white
color listnormal blue white
color listfocus white red bold
color info yellow blue bold
color article blue white

# Reload stuff
reload-threads 10 #parallel reload threads.
auto-reload yes #auto reload stuff
reload-time 20 #min
refresh-on-startup yes
download-retries 4
download-timeout 45

# files
cache-file "~/.newsbeuter/cache.db"
error-log "~/.newsbeuter/error.log"
save-path "~/.newsbeuter/save/"

#key bindings
bind-key c next-unread-feed
bind-key x prev-unread-feed
bind-key m toggle-article-read
bind-key ^B pageup
bind-key ^F pagedown
bind-key H pageup
bind-key L pagedown
bind-key k up
bind-key j down
bind-key d save
bind-key s sort
bind-key S revsort
bind-key O open-in-browser
bind-key o open-in-browser-and-mark-read

#various
max-items 200 #number of feeds to hold in db
goto-next-feed yes
browser "firefox -new-tab %u > /dev/null 2>&1"
cleanup-on-quit yes #cleanup is always nice
